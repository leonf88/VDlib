<% if (@videos.nil? or @videos.size == 0) %>
    <span>没有你要查找的内容</span>
<% else %>
    <div class="vidbox">
      <ul>
        <% @videos.each_with_index do |v, i| %>
            <li class="l1">
              <div class="v">
                <a href="<%= "/video/media/"+v.id.to_s %>" title="<%= v.title_chs %>">
                  <div class="preview">
                    <img src="/<%= v.img_path %>" onerror="javascript:this.src='/none.gif'"/>
                  </div>
                  <span class="title"><%= v.title_chs %></span>
                </a>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
    <div class="digg">
      <%= will_paginate @videos, :params => {"search" => params[:search]}, :id => "digg_pagination", :class => "digg-p", :previous_label => "<<", :next_label => ">>", :outer_window => "1" %>
    </div>
<% end %>
